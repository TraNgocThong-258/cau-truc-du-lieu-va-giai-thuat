#include<stdio.h>
#define max 50
int nhapsonguyen(){
	int n;
	do{
		printf("nhap phan tu n: ");
		scanf("%d",&n);
	}while(n<0 || n>max);
return n;	
}

int nhapmang(int a[], int n){
	for(int i=0; i<n ; i++)
	{
		printf("nhap phan tu a[%d]: ", i);
		scanf("%d", &a[i]);
		if(a[i]==0)
			return 0;
	}
}

int xuatmang(int a[], int n){
	for(int i=0; i<n; i++)
		printf("%4d", a[i]);
}

int sapxeptangledan(int a[], int n){
	int tam;
    for(int i=0;i<n;i++)
	    if(a[i]%2!=0)
		{
	    	for(int j=1;j<n;j++)
	    		if(a[j]%2!=0 && a[i] > a[j])
				{
		            if(a[i]<a[j])
						{
			                tam=a[i];
			                a[i]=a[j];
			                a[j]=tam;
			            }
				}
		}
        
}

int main(){
	int n;
	int a[max];
	n = nhapsonguyen() ;
	nhapmang(a,n);
	printf("\n mang sau khi nhap la:\n");
	xuatmang(a, n);
	
	sapxeptangledan(a,n);
	printf("\n mang sau khi sap xep le tang dan la: \n");
	xuatmang(a,n);

}
