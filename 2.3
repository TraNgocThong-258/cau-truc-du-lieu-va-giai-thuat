#include<iostream>
using namespace std;

void nhap(int a[], int n) {
	 for (int i = 0; i < n; i++) {
		 cout << "Nhap vao phan tu a[" << i << "] : ";
		 cin >> a[i];
	 }
}

void xuat(int a[], int n) {
 for (int i = 0; i < n; i++)
 cout << a[i] << "  ";
}

int demduong(int a[], int n){
	int d=0;
	for (int i; i <= n; i++)
	{
		if(a[i]>0)
			return demduong(a,n) + d++;
		else 
		return d+0;
	}
}
int main(){
 int a[1000];
 int n;
 cout << "Nhap n: ";
 cin >> n;
 nhap(a, n);
 xuat(a,n);
 int d = demduong(a, n);
 cout << d << endl;
 system("pause");
 return 0;
}
